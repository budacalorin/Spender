<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dayplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".test.TestActivity"></activity>
        <activity android:name=".chart.spendingsChartActivity" />
        <activity android:name=".chart.AllChartActivity" />
        <activity
            android:name=".selectbudget.SelectDatabaseSpenderActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".addspending.addSpendingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".test.my_layout_adapter"
            android:label="@string/title_activity_my_layout_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".spender.spender"
            android:label="@string/title_activity_spender"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".other.Notification" />
        <activity android:name=".other.Alarm" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".other.AlertReceiver" />
    </application>

</manifest>