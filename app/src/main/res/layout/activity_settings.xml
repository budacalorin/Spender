<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="844dp"
        android:padding="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/color_button_primary"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />

            <Button
                android:id="@+id/color_button_dark_gradient"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />

            <Button
                android:id="@+id/color_button_dark"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/color_button_accent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />

            <Button
                android:id="@+id/color_button_text"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />

            <Button
                android:id="@+id/color_button_selected"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/color_button_for_buttons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />

            <Button
                android:id="@+id/color_button_list_entry"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Main" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>